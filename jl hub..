--- MENU TAB
local autoFarmEnabled = false
local autoFarmBossEnabled = false
local autoClickEnabled = false

local AutoFarmBtn = makeButton("Auto Farm", 8, Color3.fromRGB(60, 149, 210), ContentFrames[1], function()
    autoFarmEnabled = not autoFarmEnabled
    AutoFarmBtn.BackgroundColor3 = autoFarmEnabled and Color3.fromRGB(10,200,60) or Color3.fromRGB(60, 149, 210)
    notify("Auto Farm "..(autoFarmEnabled and "Ativado!" or "Desligado!"))
end)

